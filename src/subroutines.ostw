			gCombatants.Filter(p => p.pInBuyMenu),
			"Hero Talent 1\n      $1600",
			gBuyMenuBasePos - (2.5 * gBuyMenuLeftUpForward[1]) - (112.5 * gBuyMenuLeftUpForward[0]),
