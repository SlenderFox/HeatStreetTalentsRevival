void nwp_teleport() "Subroutine: Nearest Walkable Position Teleport"
{
	if (gTemp1 == [])
	{
		Teleport(EventPlayer(), SortedArray(gNodes, DistanceBetween(EventPlayer(), ArrayElement()))[0]);
	}
	else
	{
