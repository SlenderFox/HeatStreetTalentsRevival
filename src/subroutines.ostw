void create_perk_text(in String text, in Boolean perk)
{
	CreateInWorldText(
		gCombatants.Filter(p => p.pInBuyMenu),
		text,
		gTemp2,
		2.5,
		Clipping.DoNotClip,
		InworldTextRev.VisibleToAndColor,
		perk ? Color.Gray : Color.LimeGreen,
		Spectators.DefaultVisibility
	);
}

