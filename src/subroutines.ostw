			gCombatants.Filter(p => p.pInBuyMenu),
			"Hero Talent 2\n      $1600",
			gBuyMenuBasePos - (25 * gBuyMenuLeftUpForward[1]) - (112.5 * gBuyMenuLeftUpForward[0]),
